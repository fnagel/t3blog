+// Make instance:
+$SOBE = t3lib_div::makeInstance('tx_t3blog_module6');
+$SOBE->init();
+
+// Include files?
+foreach($SOBE->include_once as $INC_FILE) {
+	include_once($INC_FILE);
+}
+
+$SOBE->main();
+$SOBE->printContent();
+
+?>
